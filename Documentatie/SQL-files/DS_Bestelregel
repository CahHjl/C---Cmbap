CREATE TABLE Bestelregel(
  Bstlr_Id INTEGER NOT NULL PRIMARY KEY Autoincrement,
  Bstlr_BstlId INTEGER NOT NULL DEFAULT 1,
  Bstlr_StatusId INTEGER DEFAULT 135009,
  Bstlr_Dispstatus VARCHAR(75) DEFAULT 'Bestelregel is leeg / Tabel-initrecord',
  Bstlr_ProdId INTEGER DEFAULT 1 NOT NULL,
  Bstlr_DispProduct VARCHAR(35) DEFAULT 'Productnaam',
  Bstlr_Aantal INTEGER DEFAULT 0 NOT NULL,
  Bstlr_Beginnr INTEGER,
  Bstlr_Eindnr INTEGER,
  Bstlr_Voorraad INTEGER,
  Bstlr_Extranr1 INTEGER,
  Bstlr_Extranr2 INTEGER,
  Bstlr_Extranr3 INTEGER,
  Bstlr_Opmerking VARCHAR(20),
  FOREIGN KEY(BSTLR_STATUSID) REFERENCES STATUS(STATUS_CODE) ON DELETE CASCADE ON UPDATE CASCADE,
  FOREIGN KEY(BSTLR_PRODID) REFERENCES PRODUCT(PROD_ID) ON DELETE CASCADE ON UPDATE CASCADE,
  FOREIGN KEY(BSTLR_BSTLID) REFERENCES BESTELLING(BSTL_ID) ON DELETE CASCADE ON UPDATE CASCADE
 ); 
 
CREATE INDEX "IdxBstlr_BstlId" ON Bestelregel (Bstlr_BstlId ASC); 
CREATE INDEX "IdxBstlr_ProdId" ON Bestelregel (Bstlr_ProdId ASC); 
